/**index.wxss**/
page{
  height: 100%;
}
.container{
  height: 100%;
  overflow: hidden;
  position: relative;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.penguin-info{
  margin-top: 10px;
}
/* .life-motto{

} */
.progress-box{
  width: 100px;
  height: 10px;
}
.food{
  position: absolute;
  top: -20%;
}
.mark{
  position: absolute;
  bottom: 0;
  left: 0;
  top: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #000;
  opacity: 0.9;
}
.button{
  border-radius: 50px;
}
.food-ani{
  animation: feed 1s infinite;
}
@keyframes feed{
  0%{top:-20%}
  100%{
    top:50%;
    opacity: 0;
  }             
}
.log{
  height: 400rpx;
  overflow: auto;
}
.swiper-container{
  width: 300px
}